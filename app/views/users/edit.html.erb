<h2>Edit Members</h2>

<hr />

<%= form_for :user, :as => @user, :url => user_path(@user), :html => { :method => :put } do |f| %>
  <% if @user.errors.any? %>  
    <div id="errorExplanation">  
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>  
      <ul>  
      <% @user.errors.full_messages.each do |msg| %>  
        <li><%= msg %></li>  
      <% end %>  
      </ul>  
    </div>  
  <% end %>	

  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :role_ids %>
    <%= f.collection_select :role_ids, Role.all, :id, :name  %>
  </div>

  <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <span class="help-inline">Leave blank if you don't want to change it</span>
  </div>

  <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => "long_input"  %>
  </div>

  <div>
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
    <span class="btn-wrapper"> <span>or</span> <%= link_to "Cancel", users_path %></span> 
  </div>
<% end %>
